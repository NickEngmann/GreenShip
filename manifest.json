{
    "background": {
       "scripts": [ "background.js" ]
    },
    "browser_action": {
       "default_icon": {
          "16": "icons/greenship.png",
          "19": "icons/greenship.png",
          "32": "icons/greenship.png",
          "38": "icons/greenship.png"
       },
       "default_popup": "popover/popover.html",
       "default_title": "GreenShip"
    },
    "content_scripts": [ {
       "all_frames": false,
       "js": [ "jquery-3.4.1.min.js", "./content-script.js", "./popover/popover.js" ],
       "match_about_blank": false,
       "matches": [ "https://www.amazon.com/gp/buy/spc/handlers/*" ],
       "run_at": "document_end"
    } ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "description": "Go Green and Save with GreenShip",
    "icons": {
       "128": "icons/greenship.png",
       "16": "icons/greenship.png",
       "48": "icons/greenship.png"
    },
    "manifest_version": 2,
    "name": "GreenShip",
    "permissions": [ "cookies", "debugger", "storage", "unlimitedStorage", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*" ],
    "version": "1.1.1",
    "web_accessible_resources": [ "images/*", "css/*", "fonts/*" ]
 }
 